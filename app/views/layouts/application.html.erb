<!DOCTYPE html>
<html>
  <head>
    <title>Jeesi</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="torso">
      <header>
        <h1><%= link_to "Jeesi", root_url %></h1>
      </header>
      <% if !current_user %>
        <div class="navi">
          <%= link_to 'Signin', new_user_session_path, :class =>"btn" %>
        <% else %>
          <%= link_to 'Logout', destroy_user_session_path, :method => :delete, :class =>"btn" %>
        <% end %>
      </div>

      <p class="notice"><%= notice %></p>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
